                <label asp-for="EmpJoinDate.EmpName"> </label>
            </div>
            <div class="col-6">
                <input asp-for="EmpJoinDate.EmpName" class="form-control" />
            </div>
            <span asp-validation-for="EmpJoinDate.EmpName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
